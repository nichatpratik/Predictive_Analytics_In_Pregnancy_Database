<h2 class="pAGE-header">Enter Patient's Data</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" >
  <div class="form-group">
    <label>Enter Patient's Id</label>
    <input type="text" class="form-control" placeholder="Patient's Id" name="pid">
  </div>
   <div class="form-group">
    <label>Visit Date</label>
    <input type="date" class="form-control" placeholder="Visit Date" name="visit">
  </div>
  <div class="form-group">
    <label>Enter Patient's Name</label>
    <input type="text" class="form-control" placeholder="Patient's Name" name="name">
  </div>
   <div class="form-group">
    <label>Enter Patient's AGE</label>
    <input type="number" class="form-control" placeholder="Patient's AGE" name="AGE">
  </div>
  <div class="form-group">
    <label>Enter Patient's Contact</label>
    <input type="number" class="form-control" placeholder="Patient's Contact" name="contact">
  </div>
  <div class="form-group">
    <label>Enter Patient's Address</label>
    <input type="text" class="form-control" placeholder="Patient's Address" name="address">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>